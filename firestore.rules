rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthed() { return request.auth != null; }
    function createByOwner() { return isAuthed() && request.resource.data.ownerId == request.auth.uid; }
    function ownerOfDoc() { return isAuthed() && resource.data.ownerId == request.auth.uid; }

    match /clients/{id} {
      allow create: if createByOwner();
      allow read, update, delete: if ownerOfDoc();
    }

    match /tasks/{id} {
      allow create: if createByOwner();
      allow read, update, delete: if ownerOfDoc();
    }
  }
}